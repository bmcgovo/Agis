{
    "policy": {
      "version": "2022.1a",
      "effective": "2025-07-01",
      "reviewCycle": {
        "interval": "P6M",
        "nextReview": "2025-12-01"
      },
      "personnel": {
        "minTrainingHours": 40,
        "certificationRequirements": [
          {
            "certification": "AGIS Ethics",
            "interval": "P1Y"
          },
          {
            "certification": "Cyber Security",
            "interval": "P2Y"
          }
        ],
        "backgroundChecks": {
          "interval": "P5Y",
          "clearanceLevels": ["Baseline", "Protected", "Secret"]
        }
      },
      "evidenceManagement": {
        "retentionPeriod": "P10Y",
        "encryptionStandards": "AES-256-GCM",
        "chainOfCustody": {
          "verificationInterval": "P1D",
          "auditTrailRequirements": "FIPS 140-2 Level 3"
        }
      },
      "security": {
        "accessControl": "RBAC",
        "sessionManagement": {
          "timeout": "PT15M",
          "reauthentication": "PT12H"
        },
        "incidentResponse": {
          "notificationWindow": "PT1H",
          "containmentProtocols": ["ISO/IEC 27035"]
        }
      },
      "accessibility": {
        "standard": "WCAG 2.1 AA",
        "testing": {
          "automated": "AXE Core",
          "manual": [
            "Screen Reader Testing",
            "Keyboard Navigation"
          ],
          "frequency": "P1M"
        }
      },
      "compliance": {
        "dss": "2.0",
        "pspf": "2023",
        "dda": "1992",
        "monitoring": {
          "logRetention": "P7Y",
          "auditFrequency": "P3M"
        }
      }
    }
  }
  